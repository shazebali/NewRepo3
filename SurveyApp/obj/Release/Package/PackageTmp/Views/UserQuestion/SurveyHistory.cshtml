@using System.Data;
@{
    ViewBag.Title = "eBit - Survey History";
    Layout = "~/Views/Shared/_Layout.cshtml";

    DataSet ds = (DataSet)Model;
}

<script type="text/javascript">
    $(function () {
        $("#tblSurveys").DataTable({ dom: 'Bfrtip', buttons: [{ extend: 'excel', text: "Export to Excel", title: 'Survey_List', exportOptions: { modifier: { search: 'none', order: 'original' } } }], "oLanguage": { "sInfo": "Displaying _START_ to _END_ of _TOTAL_ Studies" } });
    });
</script>

<div>
    <h2 class="col-sm-11" style="margin: 0px;padding: 0px;">Survey History for @ViewBag.ChildName</h2>
</div>
<div style="clear:both;"></div>
<br />
<style>
    .table-hover tbody tr {
        cursor: pointer;
    }

    #tblStudies .name {
        text-transform: capitalize;
    }

    #tblStudies .text-success {
        color: #33b86c;
    }

    #tblStudies .text-danger {
        color: #ef5350;
    }
</style>
<table class="table table-striped table-hover" id="tblSurveys">
    <thead>
        <tr>
            <th>Survey</th>            
            <th>Submitted On</th>
            <th>Score</th>            
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow dr in ds.Tables[0].Rows)
        {
            <tr onclick="location.href = '@Url.Action("StudyAddEdit", "Study", new { id = dr["Id"] })';">
                <td class="name">@dr["Title"]</td>
                <td>@(dr["SubmitDate"] != DBNull.Value ? Convert.ToDateTime(dr["SubmitDate"]).ToShortDateString() : "")</td>
                <td>@dr["Score"]</td>
            </tr>
        }
    </tbody>
</table>
