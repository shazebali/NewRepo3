@model SurveyApp.Models.RegisterModel
@{
    ViewBag.Title = "eBit - Register";
    Layout = null;
}
<title>Register Account</title>
<style type="text/css">
    .col-sm-10 {
        width: 100%;
    }
</style>
<link href="~/Content/site.css" rel="stylesheet" />
<header>
    <div class="content-wrapper" style="overflow:auto;padding:10px;">
        <div class="float-left">
            <p class="site-title">
                <a href="javascript:void(0);"><img src="/Images/at3logo.png"></a>
            </p>
        </div>
        <div class="float-right">
            <section id="login">
                <ul>
                    <li><a href="/Account/Register" id="registerLink">Register</a></li>
                    <li><a href="/" id="loginLink">Log in</a></li>
                </ul>

            </section>
            @*<nav>
                <ul id="menu">
                    <li><a href="/Home/Index">Home</a></li>
                    <li><a href="/Home/About">About</a></li>
                    <li><a href="/Home/Contact">Contact</a></li>
                </ul>
            </nav>*@
        </div>
    </div>
</header>
<div id="body">
    <hgroup class="title">
        <h1>@ViewBag.Title.</h1>
        <h2>Create a new account.</h2>
    </hgroup>

    <div id="loginForm">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <fieldset>
                <legend>Registration Form</legend>
                <ol>
                    <li>
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName, new { autocomplete = "off" })
                    </li>
                    <li>
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { autocomplete = "off" })
                    </li>
                    <li>
                        @Html.LabelFor(m => m.ConfirmPassword)
                        @Html.PasswordFor(m => m.ConfirmPassword, new { autocomplete = "off" })
                    </li>
                </ol>
                <input type="submit" value="Register" />
            </fieldset>
        }
    </div>
   
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - eBit (Evidence Based Intervention and Treatment)</p>
            </div>
        </div>
    </footer>
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}